<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"

    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SQLite.Edit_Data">

        <LinearLayout
            android:id="@+id/activity_edit__data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_marginBottom="5dp"
                android:id="@+id/tv_TV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Nomor"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_TV1"
                android:paddingTop="0dp"/>

            <TextView
                android:layout_marginBottom="5dp"
                android:id="@+id/tv_TextViews2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/et_editText1"
                android:layout_below="@id/et_editText1"
                android:layout_marginTop="10dp"
                android:text="Judul"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_TextViews2"
                android:layout_below="@id/tv_TextViews2"/>

            <TextView
                android:id="@+id/tv_TextViews3"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/et_editText2"
                android:layout_below="@id/et_editText2"
                android:layout_marginTop="10dp"
                android:text="Al-Qur'an"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_editText3"
                android:gravity="top"
                android:hint="masukkan yang ingin anda masukkan"
                android:paddingTop="10dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_alignLeft="@id/tv_TextViews3"
                android:layout_below="@id/tv_TextViews3"
                android:background="#EEEEEE" />

            <TextView
                android:layout_marginBottom="5dp"
                android:id="@+id/tv_TextViews4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/et_editText3"
                android:layout_below="@id/et_editText3"
                android:layout_marginTop="10dp"
                android:text="Hadits"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_editText4"
                android:gravity="top"
                android:hint="ditulis disini"
                android:paddingTop="10dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_alignLeft="@id/tv_TextViews4"
                android:layout_below="@id/tv_TextViews4"
                android:background="#EEEEEE" />

            <TextView
                android:layout_marginBottom="5dp"
                android:id="@+id/tv_TextViews5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_editText4"
                android:layout_marginTop="10dp"
                android:text="Perkataan Ulama"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_editText5"
                android:gravity="top"
                android:hint="silahkan tulis"
                android:paddingTop="10dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_alignLeft="@id/tv_TextViews5"
                android:layout_below="@id/tv_TextViews5"
                android:background="#EEEEEE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@android:dimen/notification_large_icon_height"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_Button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunting"
                    android:textColor="#DD2C00"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</android.support.v7.widget.CardView>