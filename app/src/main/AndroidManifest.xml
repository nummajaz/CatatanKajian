<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jazuli.com.catatankajian">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SQLite.MainActivity" />
        <activity
            android:name=".SQLite.Edit_Data"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".SQLite.BuatBaru"
            android:label="@string/tombol_tambah"
            android:parentActivityName="layout.SQLite.Main2Activit"
            android:windowSoftInputMode="stateAlwaysHidden">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SQLite.MainActivity" />
        </activity>
        <activity
            android:name=".SQLite.LihatData"
            android:label="@string/tombol_lihat" />
        <activity
            android:name="layout.SQLite.Main2Activit"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SQLite.Folderku.Main3Activity"
            android:label="@string/title_activity_main3"
            android:theme="@style/AppTheme.NoActionBar" >

        </activity>
        <activity android:name=".SQLite.Folderku.AddEdit"></activity>
    </application>

</manifest>